{{! Common styles used across multiple layouts }}

{{#if isPureLocal}}
{{addLocalCSS "/css/pure/pure.css" min=isProduction prepend=true}}
{{else}}
{{addCdnCSS pure.version "pure" min=true prepend=true}}
{{/if}}

{{#cdnCSS}}
<link rel="stylesheet" href="{{{.}}}">
{{/cdnCSS}}

{{#githubCSS}}
<link rel="stylesheet" href="{{{.}}}">
{{/githubCSS}}

{{#localCSS}}
  {{#if this.oldIE}}
    <!--[if lte IE 8]>
        <link rel="stylesheet" href="{{{this.oldIE}}}">
    <![endif]-->
    <!--[if gt IE 8]><!-->
        <link rel="stylesheet" href="{{{this.path}}}">
    <!--<![endif]-->
  {{else}}
    <link rel="stylesheet" href="{{{this.path}}}">
  {{/if}}
{{/localCSS}}

{{#remoteCSS}}
<link rel="stylesheet" href="{{{.}}}">
{{/remoteCSS}}
