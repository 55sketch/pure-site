{{! Common styles used across multiple layouts }}

{{#if servePureLocally}}
<link rel="stylesheet" href="/css/pure/pure{{min}}.css">
{{else}}
{{addCdnCSS pure.version "pure" min=isProduction prepend=true}}
{{/if}}

{{#if includePureGR}}
<!--[if lte IE 8]>
  {{#if servePureLocally}}
    <link rel="stylesheet" href="/css/pure/grids-responsive-old-ie{{min}}.css">
  {{else}}
    {{addCdnCSS pure.version "grids-responsive-old-ie" min=isProduction}}
  {{/if}}
<![endif]-->
<!--[if gt IE 8]><!-->
  {{#if servePureLocally}}
    <link rel="stylesheet" href="/css/pure/grids-responsive{{min}}.css">
  {{else}}
    {{addCdnCSS pure.version "grids-responsive" min=isProduction}}
  {{/if}}
<!--<![endif]-->
{{/if}}

{{#cdnCSS}}
<link rel="stylesheet" href="{{{.}}}">
{{/cdnCSS}}

{{#localCSS}}
  {{#if this.oldIE}}
    <!--[if lte IE 8]>
        <link rel="stylesheet" href="{{{this.oldIE}}}">
    <![endif]-->
    <!--[if gt IE 8]><!-->
        <link rel="stylesheet" href="{{{this.path}}}">
    <!--<![endif]-->
  {{else}}
    <link rel="stylesheet" href="{{{this.path}}}">
  {{/if}}
{{/localCSS}}

{{#remoteCSS}}
<link rel="stylesheet" href="{{{.}}}">
{{/remoteCSS}}
